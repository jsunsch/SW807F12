<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.aau.utzon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <provider android:name=".webservice.RestContentProvider"
            android:authorities="edu.aau.utzon"
            android:exported="false">
            <grant-uri-permission android:pathPattern=".*" />
        </provider>
        <uses-library android:name="com.google.android.maps" />
        <activity
            android:name="UtzonActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".OutdoorActivity" 
			android:label="@+id/OutdoorActivity" >
		</activity>
		<activity 
            android:name=".WebserviceActivity" 
			android:label="@+id/WebserviceActivity" >
		</activity>
    </application>

</manifest>